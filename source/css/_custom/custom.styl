// Custom styles.
.st-default-search-input {
  width: 60% !important;
}

a.tag-anchor {
  width: 60% !important;
  margin-bottom: 1em;
}

li.nav-item {
  margin-bottom: 1em;
}

.page-post-detail .sidebar-nav-overview {
  margin-left: 0;
}

a:link {
  text-decoration: underline;
  font-weight: bolder;
}

#works a:link,
#posts a:link,
.post-toc-content a:link
{
  text-decoration: none;
}

.video-container {
  position: relative;
  padding-bottom: 56.25%;
  padding-top: 35px;
  height: 0;
  overflow: hidden;
}

.video-container iframe {
  position: absolute;
  top:0;
  left: 0;
  width: 100%;
  height: 100%;
}

.author-info span:nth-last-child(n+2):after,
.author-info a:nth-last-child(n+2):after {
  content: " | "
}


@media (max-width: 600px) {
  .video-mobile-adjust {
  padding-bottom: 100%;
  }
}